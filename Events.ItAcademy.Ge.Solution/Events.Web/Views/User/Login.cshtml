@model LoginModel

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<div class="auth">
    <div class="auth-container">
        <form method="post" class="auth-form">
            <h1>Sign in</h1>
            <div class="auth-input">
                <label for="email" asp-for="Model.Email">
                    E-Mail
                </label>
                <input type="email" name="email" id="name" asp-for="Model.Email" />
                @*<p class="auth-error">E-Mail is a required field.</p>*@
            </div>
            <div class="auth-input">
                <label for="password" asp-for="Model.Password">
                    Password
                </label>
                <input type="password" name="password" id="password" asp-for="Model.Password" />
            </div>
            <button type="submit" name="submit" class="auth-btn">Log In</button>
        </form>
        <div class="auth-bottom">
            Don't have an account yet? <a asp-controller="user" asp-action="register">Create Now</a>
        </div>
    </div>
</div>