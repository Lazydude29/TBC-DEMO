    <div class="container">
        <!-- TIMELINE -->

        <div id="2021" class="spacer-toc"><i class="fa fa-calendar"></i></div>
        <h2 class="border-line">2021</h2>

        <!-- 2020 -->

        <div class="eventWrapper">
            @foreach (var eventDto in Model)
            {
                <div class="event">
                    <div class="event--img">
                        <a href="@eventDto.ImageUrl" onclick="if (!lightboxLoaded) return false" class="w-fancybox">
                            <img src="@eventDto.ImageUrl" title="Πρωτοχρονιάτικη Συναυλία - Gala Όπερας Δήμου Διονύσου" alt="Πρωτοχρονιάτικη Συναυλία - Gala Όπερας Δήμου Διονύσου">
                        </a>
                    </div>
                    <div class="event--date"><span>@eventDto.Month</span><span>@eventDto.Day</span><span>@eventDto.Year</span><span>@eventDto.Location</span></div>
                    <div class="event--content">
                        <h2><a href="https://ka.wikipedia.org/wiki/%E1%83%9B%E1%83%A3%E1%83%A8%E1%83%97%E1%83%90%E1%83%98%E1%83%93%E1%83%98%E1%83%A1_%E1%83%91%E1%83%90%E1%83%A6%E1%83%98" title="">@eventDto.Name</a></h2>
                    </div>
                </div>
            }



        </div><!-- end eventWrapper  -->
    </div>
</body>

</html>

